<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.StockMapper">
    <resultMap id="BaseResultMap" type="com.example.demo.model.Stock">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="user_id" jdbcType="INTEGER" property="userId" />
        <result column="amount" jdbcType="DECIMAL" property="amount" />
        <result column="create_at" jdbcType="DATE" property="createAt" />
        <result column="update_at" jdbcType="DATE" property="updateAt" />
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, amount, create_at, update_at
    </sql>

    <select id="selectStockById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from stock where id = #{id, jdbcType=INTEGER}
    </select>

    <update id="updateStockByPrimaryKeySelective" parameterType="com.example.demo.model.Stock">
        update stock
        <set>
            <if test="userId != null">
                user_id = #{userId,jdbcType=DECIMAL},
            </if>
            <if test="amount != null">
                amount = #{amount,jdbcType=DECIMAL},
            </if>
            <if test="createAt != null">
                created_at = #{createdAt,jdbcType=DATE},
            </if>
            <if test="updateAt != null">
                update_at = #{updateAt,jdbcType=DATE},
            </if>
        </set>
        where id = #{id, jdbcType=INTEGER}
    </update>
</mapper>
